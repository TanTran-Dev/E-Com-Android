<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamadr.ecommerceapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ecom_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ecom_logo"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.profile.ProfileEditActivity"></activity>
        <activity android:name=".view.add_product.NewProductActivity" />
        <activity android:name=".view.order_product.OrderProductActivity" />
        <activity android:name=".view.shopping_cart.ShoppingCartActivity" />
        <activity
            android:name=".view.registration.RegistrationActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.login.LoginActivity" />
        <activity android:name=".view.home.HomeActivity" />
        <activity android:name=".view.product_detail.ProductDetailActivity" />
        <activity android:name=".view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.product.ProductByAdminActivity" />
    </application>

</manifest>